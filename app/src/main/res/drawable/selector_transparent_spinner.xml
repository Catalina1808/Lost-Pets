<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item  android:state_selected="true">
        <shape>  <stroke android:width="3dp" android:color="@color/orange" />

            <solid android:color="@color/light_orange_2" />

            <corners android:radius="10dp"/>
            <padding
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp"
                android:left="15dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>  <stroke android:width="3dp" android:color="@color/orange" />
            <solid android:color="@color/light_orange_2" />
            <corners android:radius="10dp"/>
            <padding
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp"
                android:left="15dp"/>
        </shape>
    </item>

    <item><shape>
        <stroke android:width="3dp" android:color="@color/light_orange_2" />

        <solid android:color="@color/light_orange_1" />

        <corners android:radius="10dp"/>
        <padding
            android:top="5dp"
            android:right="15dp"
            android:bottom="5dp"
            android:left="15dp"/>
    </shape></item>

</selector>