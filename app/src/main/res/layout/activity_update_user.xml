<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_orange_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginBottom="@dimen/margin30"
                android:contentDescription="@string/Logo"
                android:src="@drawable/logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_image_orange_border"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:autofillHints="@string/email"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/sunshiney"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:autofillHints="phone"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/sunshiney"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:autofillHints="@string/email"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/sunshiney"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <Button
                        android:id="@+id/btn_update_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/selector_simple_button"
                        android:drawableStart="@drawable/ic_paw"
                        android:drawableEnd="@drawable/ic_paw"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/dark_orange_alpha"
                        android:fontFamily="@font/sunshiney"
                        android:text="@string/update_information"
                        android:textAllCaps="false"
                        android:textColor="@color/white_alpha"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin30"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_image_orange_border"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:autofillHints="@string/old_password"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/sunshiney"
                        android:hint="@string/old_password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/edt_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:autofillHints="@string/new_password"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/sunshiney"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <Button
                        android:id="@+id/btn_update_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/selector_simple_button"
                        android:drawableStart="@drawable/ic_paw"
                        android:drawableEnd="@drawable/ic_paw"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/dark_orange_alpha"
                        android:fontFamily="@font/sunshiney"
                        android:text="@string/update_password"
                        android:textAllCaps="false"
                        android:textColor="@color/white_alpha"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            <Button
                android:id="@+id/btn_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/selector_transparent_button"
                android:drawableStart="@drawable/ic_paw"
                android:drawableEnd="@drawable/ic_paw"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/sunshiney"
                android:text="@string/delete_account"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="invisible" />
        </LinearLayout>


</ScrollView>